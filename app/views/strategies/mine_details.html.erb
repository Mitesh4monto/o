	    <% calendar.day(:day_method => :done_date) do |date, cmss| %>
	      <%= date.day %>
	      <ul>
			<table>
				<% for cm in cmss %>
				<tr bgcolor="000000" height=2px><td>done</td></tr>

				<% end %>
			</table>
	      </ul>
	    <% end %>
	  <% end %>
	</div>
	
