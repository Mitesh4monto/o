$(function() {
$( "#tabs" ).tabs();
$('#tabs').tabs("option", 'active', <%= @tab %>)
});
</script>
<script>
function showHideDiv(id){
  var obj = document.getElementById(id);
    if (obj.style.display=="none"){
      obj.style.display='block';
    } else if(obj.style.display=="block"){
      obj.style.display='none';
    }
}
</script>



