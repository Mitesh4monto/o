<% if @activity.strategy.course %>
Part of course <%= link_to @activity.strategy.course.name, @activity.strategy.course %><BR>
<% end %>

title:<%= @activity.title %>
<BR>
description: <%= raw @activity.description %>
<BR>
<%= link_to "from" + @activity.from.title, @activity.from if @activity.from %>
	<BR>
Timing: <%= @activity.kind_of_timing %><BR>
<BR>timing expression: <%= @activity.timing_expression %><BR>
duration: <%= @activity.timing_duration %>
<BR>


hals:
<% @hals.each do |hal| %>

<%= hal.created_at.strftime("%m/%d/%Y") %>
	entry: <%= hal.entry %>
	<BR>
	Insights: <%= hal.insights %>
	<BR>
	Help: <%= hal.help %>
	<BR>
	By:<%= link_to hal.user.name, hal.user %> 

<% end %>

<% if @related_hals.size > 0 %>
	<BR>
	<b>Related Hals:</b>
	<BR>
	<% @related_hals.each do |hal| %>
		<%= render :partial => 'hals/view_one', locals: {hal: hal} %>
	<% end %>
<% end %>


<% if (current_user && (@activity.user_id == current_user.id)) then %>
<%= link_to 'Edit', edit_activity_path(@activity) %> 
<% end %>
