<% if @activity.strategy.course %>
Part of course <%= link_to @activity.strategy.course.name, @activity.strategy.course %><BR>
<% elsif @activity.user %>
In <%= link_to @activity.user.name, @activity.user %>'s plan
<% end %>

<strong>title</strong>:<%= @activity.title %>
<BR>
<strong>description</strong>: <%= raw @activity.description %>
<BR>
<%= link_to "from" + @activity.from.title, @activity.from if @activity.from %>
	<BR>
<strong>Timing</strong>: <%= @activity.kind_of_timing %><BR>
<BR><strong>timing expression</strong>: <%= @activity.timing_expression %><BR>
<strong>duration</strong>: <%= @activity.timing_duration %>
<BR>
<strong>Tags: </strong>
<%= render :partial => 'shared/tag_display', locals: {tags: @activity.tags} %>

<BR><BR>


<strong>hals</strong>:<BR>
<% @hals.each do |hal| %>
	<%= render :partial => 'hals/view_one', locals: {hal: hal, show_user: true} %>
<hr>
<% end %>

<% if @related_hals.size > 0 %>
	<BR>
	<b>Related Hals:</b>
	<BR>
	<% @related_hals.each do |hal| %>
		<%= render :partial => 'hals/view_one', locals: {hal: hal, show_user: true} %>
		<hr>
	<% end %>
<% end %>


<% if (current_user && (@activity.user_id == current_user.id)) then %>
<%= link_to 'Edit', edit_activity_path(@activity) %> 
<% end %>
