<% if current_user %>
 <div class="right">
	<aside>
	<div class="box_holder">
			<div class="title"><h3>Updates</h3></div>
			<div class="triangle2"></div>
			<% @udpates.each do |update| %>
				<% if update.action and update.loggable %>
					<div class="box_holder2">
						<%= 
						# update.id
						 %> 
						<p>
							<%= link_to update.user.name, update.user %>&nbsp; <%= render "update/#{update.loggable_type.downcase}/#{update.action.downcase}", update: update %>
						</p>
					</div>
				<% end %>
			<% end %>
	</div>
	</aside>
 </div>
<% end %>
