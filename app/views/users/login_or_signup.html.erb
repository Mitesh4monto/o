  <div class="page">
    <h1>Please login or register to access that</h1>
    <div class="arrowbox"></div>
  </div>
  <div class="page2">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <h1>Login</h1>
    <div class="row">
      <label>Enter valid email</label>
	  <%= f.email_field :email, :autofocus => true %>
	  <div class="clear"></div>
	</div>
    <div class="row">
      	<label>Password</label>
	  	<%= f.password_field :password %></div>
		<div class="clear"></div>
	</div>

	  <% if devise_mapping.rememberable? -%>
      	<div class="row">
		    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	        <label class="disnone">&nbsp;</label>
	        <span>Remember Me</span>
	        <div class="clear"></div>
      	</div>
	  <% end -%>
      <div class="clear"></div>
      <label>&nbsp;</label>

	  <div><%= f.submit "Sign in" %></div>
      <img src="images/fb.png">
      <label>&nbsp;</label>
	<% end %>
	
	<%= render "devise/shared/links" %>
	
    <form class="creat">
      <h1>Create an account</h1>
      <div class="row">
        <label>Email</label>
        <input type="text">
        <div class="clear"></div>
      </div>
      <div class="row">
        <label>Name <em>(As you would  like it to Appear)</em></label>
        <input type="text">
        <div class="clear"></div>
      </div>
      <div class="row">
        <label>Password</label>
        <input type="password">
        <div class="clear"></div>
      </div>
      <div class="row">
        <label>Password</label>
        <input type="password">
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
      <label>&nbsp;</label>
      <input type="button" value="Join">
    </form>
  </div>
</div>
