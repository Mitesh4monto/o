<div class="bs-example">
    <nav role="navigation" class="navbar navbar-default">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/" class="navbar-brand">me-Learning</a>
        </div>
        <!-- Collection of nav links and other content for toggling -->
        <div id="navbarCollapse" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
	            <li><a href="/strategies/mine">My Plan</a></li>
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="/courses">Courses <b class="caret"></b></a>
                    <ul role="menu" class="dropdown-menu">
                        <li><a href="/courses">Browse courses</a></li>
						<% if (current_user && current_user.get_following_courses.size>0) %>
						Enrolled in:
							<% 	current_user.get_following_courses.each do |course| %>

							<li><%= link_to course.name, course %></li>

							<% end %>
						<% end %>
						<% if (current_user && current_user.courses.size>0) %>
                        <li class="divider"></li>
						Created:
							<% 	current_user.courses.each do |course| %>
							<li><%= link_to course.name, course %></li>
							<% end %>
						<% end %>
                        <li class="divider"></li>
                        <li><a href="/courses/new">create a course</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="">Blog<b class="caret"></b></a>
                    <ul role="menu" class="dropdown-menu">
						<li><%= link_to "add an entry", new_hal_path  %></li>
                        <li class="divider"></li>
                        <li><%= link_to "mine", :my_hals %></li>
						<li><%= link_to "following", :following  %></li>
						<li><%= link_to "my insights", :my_insights  %></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
			  <% if user_signed_in? %>
				<li><%= image_tag current_user.avatar.url(:thumb) if (current_user and current_user.avatar.url(:thumb)) %></li>
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="">Welcome <%= current_user.name %><b class="caret"></b></a>
                    <ul role="menu" class="dropdown-menu">
						<li><%= link_to "profile", "/users/myprofile" %></li>
						<li><%= link_to "followinger", "/users/myprofile" %></li>
					    <li><%= link_to "Sign out", sign_out_path %></li>
                    </ul>
                </li>
				 <% else %>
				    <li><%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %></li>
				<li><%= link_to "	with FB:", "/auth/facebook", id: "sign_in" %></li>
				  <% end %>
            </ul>
        </div>
    </nav>
</div>	

