<% if hals.size == 0 %>
<h2>No entries.</h2>
<% end %>

<% hals.each do |hal| %>
<div class="box">
	<%= link_to hal.created_at.strftime("%m/%d/%Y"), hal %>
	<% if hal.halable %>
		- About Activity: <%= link_to hal.halable.title, hal.halable %>
	<% end %>	
	<p>	<% if !hal.insights.blank? %><%= hal.insights %><% end %>
	</p>
</div>
<% end %>
