<%= stylesheet_link_tag "activities" %>

<BR>
description: <%= strategy.description %>
<BR>
	Activities:<BR>

<ul id="activities" data-update-url="<%= sort_activities_url %>">
<% activty_map = get_activity_by_map(strategy.activities) %>
<% if activty_map.size > 1 %>
	<% activty_map.each do |key, activities| %>
		<strong>Goal: <%= key.empty? ? "none" : key %><%= "-- from course " + activities.first.course.name if activities.first.course and !key.empty?  %></strong><BR>
			<ul id="activities" data-update-url="<%= sort_activities_url %>">
		<% activities.each do |activity| %>


		<li class="activity" id="activity_<%= activity.id %>">
		  	<span class="handle">[drag]</span>

			<%= link_to image_tag("/images/checkmark.png", :size => "15x18", :title => "Did today"), :controller => "commitment_marks", :action => "add_commitment_mark_to_activity", :activity_id => activity.id %>&nbsp;&nbsp;
			<%= link_to image_tag("/images/delete_small.jpg", :size => "20x20", :title => "Delete Activity"), activity, confirm: 'This will delete the activity.  Are you sure?', method: :delete %>

			Activity:	<%= activity.id %> -- <%= link_to activity.title, mypd_path(activity.id) %>

			<%= link_to "add entry about", hal_about_activity_path(activity.id)  %>

		</li>
		<% end %>

		</ul>
	<% end %>
<% else %>
<% strategy.activities.each do |activity| %>


<li class="activity" id="activity_<%= activity.id %>">
  	<span class="handle">[drag]</span>

	<%= link_to image_tag("/images/checkmark.png", :size => "15x18", :title => "Did today"), :controller => "commitment_marks", :action => "add_commitment_mark_to_activity", :activity_id => activity.id %>&nbsp;&nbsp;
	<%= link_to image_tag("/images/delete_small.jpg", :size => "20x20", :title => "Delete Activity"), activity, confirm: 'This will delete the activity.  Are you sure?', method: :delete %>

	Activity:	<%= activity.id %> -- <%= link_to activity.title, mypd_path(activity.id) %>

	<%= link_to "add entry about", hal_about_activity_path(activity.id)  %>

</li>

<% end %>

<% end %>


</ul>
