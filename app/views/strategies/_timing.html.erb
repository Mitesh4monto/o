<% if (defined?(labelled) and labelled and activity.kind_of_timing != "Other") %>
<strong>Timing:</strong>
<% end %>
<% case activity.kind_of_timing
	when "Frequency" %>	
		<% if activity.timing_expression %>
			<%= activity.timing_expression.split.first %> times per <%= activity.timing_expression.split.last %>
		<% else %>
			timing error
		<% end %>
	<% when "One time" %>
		Once
	<% when "Other" %>
	<% when "Whenever" %>
	<% when "Reactive" %>
		When "<%= activity.timing_expression %>."    
	<% else %>
		 -- error
<% end %>
<% if !activity.timing_duration.blank? and activity.course_activity? %>
until <%= activity.timing_duration %> from join
<% elsif activity.timing_until %>
before <%= activity.timing_until.strftime("%m/%d/%Y") %>
<% end %>
