<h1>Listing courses</h1>

<table>

<% @courses.each do |course| %>
  <tr>
    <td>id:<%= course.id %></td>
    <td><%= course.name %></td>
    <td><%= short_description(course) %></td>
    <td><%= course.user_id %></td>
    <td><%= course.hals.where("privacy != 0").size %> entries about this course</td>
<% followers = @followers[course.id.to_s] || 0  %>
    <td><%= followers  %> followers </td>

    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Course', new_course_path %>
