<% @title = "My Plan" %>


<div class="page"><h2>My Plan</h2>
	<form class="search">
	<input type="text" placeholder="Search by zit or zat">
	<input type="submit" value="GO">
	</form>
</div>
<div class="page3">
<div class="left_bar">


 <%= raw myp_status %> 
	
    	<% if !current_user.strategy.current_activities.empty? %>
			<strong>plan:</strong><BR>
			<%= render :partial => 'view_one', locals: {strategy: current_user.strategy} %>

			<%= link_to 'Add activity', add_activity_path %>

		<% end %>

	</div>
	<div class="right_bar">

		<%= render :partial => 'hals/view_hal_list_new', locals: {hals: current_user.hals.first(3), show_user: false, commenting: false} %>

		<% if @related_hals.size > 0 %>
			<BR>
			<b>Related Hals:</b>
			<BR>
			<% @related_hals.each do |hal| %>
				<%= render :partial => 'hals/view_one', locals: {hal: hal} %>
			<% end %>
		<% end %>
	</div>
		<BR><BR>
</div>
