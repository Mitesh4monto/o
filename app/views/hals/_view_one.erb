<%= hal.created_at.strftime("%m/%d/%Y") %> - 
<strong>entry</strong>: <%= hal.entry %>
<BR>
<strong>Insights</strong>: <%= hal.insights %>
<BR>
<strong>Tags: </strong>
<%= render :partial => 'shared/tag_display', locals: {tags: hal.tags} %>
<BR>
<strong>Help</strong>: <%= hal.help %>
<BR>
<% if show_user %>
	<strong>User</strong>:
	<% if (hal.user) then %>
		<%=  link_to hal.user.name, hal.user %>
	<% else  %> 
		Anonymous
	<% end  %>
	<BR>
<% end %>
<% if hal.halable %>
	<strong>about</strong>:<%= link_to shorten(hal.halable.text, 40), hal.halable %>
	<BR>
<% end %>

<% if hal.fromable_type %>
	from:<%= hal.fromable_type %> id:<%= hal.fromable_id %> -- <%= link_to shorten(hal.fromable.text, 40), hal.fromable if hal.fromable %>
<% end %>

<BR>

<% hal.comments.each do |comment| %>
	Comment by <%= link_to comment.user.name, comment.user %> at <%= comment.created_at.strftime("%m/%d/%Y")%>
	<BR>
	<%= comment.body %> <BR>
	<BR>
	<% if (current_user && (comment.user_id == current_user.id || hal.user_id == current_user.id)) then %>
        <%= link_to 'Delete', comment, method: :delete %>
	<% end %>
<% end %>

