<!-- ACT IN SEQ -->
<% if activity.type == "ActivityInSequence" %>
	<ul id="activities" data-update-url="<%= sort_activity_sequences_url %>">
		<% activity_sequence = activity.activity_sequence %>
 		<% activity_sequence.activities.each do |activity| %>		
			<%= activity.id %><%= link_to activity.title, show_activity_path(activity) %>
	    	<%= link_to 'Edit', edit_activity_path(activity.id) %>
		    <%= link_to 'Delete', activity, confirm: 'Are you sure?', method: :delete %><BR>
		<% end %>
		<%= link_to 'manage sequence', activity.activity_sequence %>											
	</ul>
	<BR>

	<%= link_to 'Add activity to sequence', add_activity_to_sequence_path(activity_sequence.activity_in_sequences.first) %>	
	<!-- ACT IN SEQ -->
<% else %>
			                            <%= link_to "Edit Activity", edit_activity_in_course_path(activity) %>
	<strong>Description</strong>: <%= raw activity.description %><BR>
	<% if activity.from %> Copied from: <%= link_to activity.from.title, activity.from  %> <% end %>
		<BR>
	<%= render :partial => 'strategies/timing', locals: {activity: activity} %>
	<BR>
	<% if !activity.tags.blank? %>
		<strong>Tags: </strong>
		<%= render :partial => 'shared/tag_display', locals: {tags: activity.tags} %>
	<% end %>
	<%= link_to 'Add activity to sequence', add_activity_to_sequence_path(activity) %>
<% end %>
