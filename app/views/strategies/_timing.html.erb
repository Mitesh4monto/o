<% case activity.kind_of_timing
	when "Frequency" %>
	
		Do it <%= activity.timing_expression.split.first %> times per <%= activity.timing_expression.split.last %>
	<% when "One time" %>
		one time thing
	<% when "Whenever" %>
		Do it like you know whenver
	<% when "Reactive" %>
		Do it when "<%= activity.timing_expression %>."    
	<% else %>
		 -- nah just kidding
<% end %>
<% if !activity.timing_duration.blank? and activity.course_activity? %>
until <%= activity.timing_duration %> from join
<% elsif activity.timing_until %>
before <%= activity.timing_until.strftime("%m/%d/%Y") %>
<% end %>
