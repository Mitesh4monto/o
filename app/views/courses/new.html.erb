<script>
$(function() {
$( "#tabs" ).tabs();
$("#tabs").tabs({disabled: [1,2]});
});
</script>
<% @show_aside = true %>
<% @title = "Create new course" %>


	<div class="tab_holder2">
		<div id="tabs">
			<ul>
			<li><a href="#tabs-1">Overview</a></li>
			<li><a href="#tabs-2">Plan</a></li>
			<li><a href="#tabs-3">Additional Info</a></li>
			</ul>
			<div id="tabs-1">
				<div class="clear"></div>
				<h2>Instruction</h2>
				<p>Please enter as much information as would be helpful.  Keep in mind only the title and the course overview will appear in the courses listing.  Everything is searchable.  </p>

		<%= form_for @course, :html => {:class => "course_manage"} do |f| %>
			  <% if @course.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

			      <ul>
			      <% @course.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

		    <div id="overview_error_explanation"></div>		
				<div class="row"><label>Course Name</label> 
					
				<%= f.text_field :name, :class => "top", :label => "Course Name" %><div class="clear"></div></div>
				<div class="row"><label>Overview<%= tipper("Overview.  This will appear on the course listing page. <BR> For details, especially for course followers, add those in the supplemental info area", "right") %></label><%= f.text_area :overview %><div class="clear"></div></div>
				<div class="row"><label>About the Author</label><%= f.text_area :about_the_author %><div class="clear"></div></div>
				<div class="row">
					<label>Site Url</label><%= f.text_field :external_site %>
					<div class="clear"></div>
				</div>			
				<div class="row"><label>Tag List<%= tipper("Enter comma separated tags.  This will help people find your course and easily see what it's about.<br> You can add as many as you wish, but they should be relevant to your course.", "right") %></label><%= f.text_field  :tag_list  %><div class="clear"></div></div>
				<div class="row"><label>Course Image</label><%= f.file_field :course_image %></div><div class="clear"></div>
				<div class="row"><label>&nbsp;</label>
				<%= f.submit %>
			</div>
			<div class="clear"></div>
		<% end %>
			</div>
		</div>
	</div>

