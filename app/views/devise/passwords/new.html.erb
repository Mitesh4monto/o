<% @title = "Forgot your password?" %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => 'course_manage', :method => :post }) do |f| %>
  <%= devise_error_messages! %>

	<div class="row">
		<label>Email</label><%= f.email_field :email, :autofocus => true %>	  
		<div class="clear"></div>
	</div>

	<div class="row">
		<%= f.submit "Send me reset password instructions" %>
	</div>
<% end %>
<div class="clear"></div><BR>

<%= render "devise/shared/links" %>
