<%= semantic_form_for @hal do |f| %>
	<%= f.inputs :entry, :insights, :help %>
	<%= f.input  :tag_list, :label => "Tags (comma separated)" %>
	
	<%  selection = {"public" => "1", "private" =>  "0" }  %>
	
	<%= f.input :privacy, :as => :select, :include_blank => false, :collection => selection %>
	
	
	<%= f.hidden_field :halable_id, :value => @halable_id %>
	<%= f.hidden_field :halable_type,:value => @halable_type %>
	<%= f.hidden_field :user_id, :value => current_user.id %>

   <%= f.action :submit, :as => :button  %>
   <%= f.action :cancel, :as => :link  %>
  
	<% if current_user.provider == "facebook" %>
		<%= submit_tag 'Share on FB', :name => 'fbshare' %>
	<% end %>

<% end %>
