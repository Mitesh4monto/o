<% @show_aside = false %>

<% if @tut %>
<script>
$(document).ready(function() {
	<% if current_user.strategy.current_activities.first %>
		inanimateshowdiv('<%= current_user.strategy.current_activities.first.id %>');
	<% end %>
	$(window).scrollTop(0);introJs().start();
});
</script>
<% end %>
<div class="left_bar width94">
	<div class="box_holder3 width100">
		<div class="title"><h3>My Plan</h3></div><br/>
				
	 <% if !myp_status.empty? %><div class='boxed'><p><%= raw myp_status %> </p></div> <% end %>
	    	<% if !current_user.strategy.current_activities.empty? %>
			<div class="tabholder">
			     <div class="tabcontainer">
			         <div class="myplane_area">
	
			<%= 
			 render :partial => 'view_plan', locals: {strategy: current_user.strategy, myp: true, course_edit: false} 
			%>
					</div>
				</div>
			</div>

			<% else %>
	        <div class="box_holder3">
              <div class="box marginnone">
                <p>Your plan is empty.  Go ahead and add activities to it.</p>
              </div>
            </div>
            <div class="clear"></div>
            <div class="box_3"><%= link_to 'Add activity', add_activity_path, :class => 'green', :style => 'margin-top:0px;' %>
			<%= link_to 'Look for courses', courses_path %>
              <div class="clear"></div>
              <div class="clear"></div><BR>
            </div>
			<% end %>
		</div>
	</div>
</div>
