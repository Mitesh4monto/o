<body>
	<div id="body_frame">
		<div class="wrapper">
	
	<%= render :partial => "shared/menu_bar" %>

	<% flash.each do |name, msg| %>
		<% if name == :notice %>
		  <div class="alert alert-success">
		    <a class="close" data-dismiss="alert">×</a>
		    <%= msg %>
		  </div>
		<% elsif name == :error %>
		  <div class="alert alert-error">
		    <a class="close" data-dismiss="alert">×</a>
		    <%= msg %>
		  </div>
		<% elsif name == :partial %>
		  <div class="alert alert-success">
		    <a class="close" data-dismiss="alert">×</a>
			<%= render :partial => "shared/flashes/#{msg}" %>
		  </div>
		<% end %>
	<% end %>
        

