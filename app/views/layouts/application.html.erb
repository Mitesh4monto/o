<%= stylesheet_link_tag "application", :media => "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
<link rel="shortcut icon" href="/bannfiles/favicon.png" type="image/x-icon">

<script type="text/javascript">
Shadowbox.init({
language: 'en',
players: ['img', 'html', 'iframe', 'qt', 'wmp', 'swf', 'flv']
});
</script>
<%= yield(:head_js) %>

</head>


<body>
	<div id="body_frame">
		<div class="wrapper">
	
		<header>						
			<%= render :partial => "shared/menu_bar" %>
		<div class="clear"></div>
			  <div class="info">
	<% flash.each do |name, msg| %>
		<% if name == :notice %>
			  <div class="notification">
		    <%= msg %>
		  </div>
		<% elsif name == :error %>
			  <div class="error">
		    <%= msg %>
		  </div>
		<% elsif name == :partial %>
			  <div class="notification">
			<%= render :partial => "shared/flashes/#{msg}" %>
		  </div>
		<% end %>
	<% end %>
	</div>		
        
</header>


		 <div class="contain">
		      <div class="side"></div>
		      <div class="main_con">
			  	<div class="content-full">
			  		<div class="left">
			  			<div class="inn">
		        			<div class="page">
		          				<h2><%= @title %></h2>
								<% if defined?(@search_path) and @search_path %>
									<%= form_tag @search_path, :class => 'search', method: :get do %>
									    <%= text_field_tag :query, params[:query] %>
									    <%= submit_tag "Go", name: nil %>
									<% end %>
								<% end %>
		
		        			</div>
		        			<div class="page3">			
			<!-- <div class="page"><h2></h2></div>
				<div class="page3">			 -->
<%= yield %>
				<!-- </div>
			 </div> -->
				

	
							</div>
			<!-- <div class="side2"></div> -->
						</div>
					</div>
					<%=  render :partial => 'shared/aside' if defined?(@show_aside) and @show_aside and current_user %>
				</div>
			</div>
			<div class='side2'></div>
		</div>
		<div class="clear"></div>
		<footer>
			<%= render :partial => 'shared/footer' %>
		</footer>
	</div>
	</div>

	<!-- debug -->
	<% if Rails.env == "development" %>
	  <!-- <div id="footnotes_holder"> -->
	  <!-- </div> -->
	  <!-- <%= render :partial => 'shared/debug' %> -->
	<% end %>
</body></html>
